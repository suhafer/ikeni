<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ikeniBlack"
    android:orientation="vertical"
    android:padding="@dimen/space_16">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/message"
        style="@style/IkeniTextTitle.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_16"
        android:text="@string/message_feedback"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_feedback"
        style="@style/IkeniEditText"
        android:gravity="start"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginEnd="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:layout_marginStart="@dimen/space_8"
        android:background="@drawable/ikeni_bg_plain"
        android:lines="3"
        />

    <Button
        android:id="@+id/choice_yes"
        style="@style/IkeniButton.White.Bordered"
        android:layout_marginBottom="@dimen/space_4"
        android:layout_marginEnd="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_4"
        android:text="@string/accept_send"/>

</LinearLayout>