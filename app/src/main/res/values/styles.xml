<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Button Style-->
    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.White.Bordered" parent="Button">
        <item name="android:textColor">@color/text_selector_black</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Black.Bordered" parent="Button">
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:background">@drawable/button_selector_white</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Edit Text Style-->
    <style name="DefaultEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>


    <!--Text Style-->
    <style name="TextAppearance.Caption" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.SubHeader" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Title" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Headline" parent="android:TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewCaption">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/TextAppearance.Caption</item>
    </style>

    <style name="TextViewCaption.White" parent="TextViewCaption">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewBody">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/TextAppearance.Body</item>
    </style>

    <style name="TextViewBody.White" parent="TextViewBody">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSubHeader">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/TextAppearance.SubHeader</item>
    </style>

    <style name="TextViewSubHeader.White" parent="TextViewSubHeader">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
    </style>

    <style name="TextViewTitle.White" parent="TextViewTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewHeadline">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
    </style>

    <style name="TextViewHeadline.White" parent="TextViewHeadline">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Dialog part -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

</resources>
