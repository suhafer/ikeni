<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Button Style-->
    <style name="IkeniButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IkeniButton.White.Bordered" parent="IkeniButton">
        <item name="android:textColor">@color/ikeni_t_s_black</item>
        <item name="android:background">@drawable/ikeni_b_s</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IkeniButton.Black.Bordered" parent="IkeniButton">
        <item name="android:textColor">@color/ikeni_t_s</item>
        <item name="android:background">@drawable/ikeni_b_s_white</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Edit Text Style-->
    <style name="IkeniEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>


    <!--Text Style-->
    <style name="IkeniTextSize.Caption" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IkeniTextSize.Body" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IkeniTextSize.SubHeader" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IkeniTextSize.Title" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IkeniTextSize.Headline" parent="android:TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="IkeniTextCaption">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/IkeniTextSize.Caption</item>
    </style>

    <style name="TextViewCaption.White" parent="IkeniTextCaption">
        <item name="android:textColor">@color/ikeniWhite</item>
    </style>

    <style name="IkeniTextBody">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/IkeniTextSize.Body</item>
    </style>

    <style name="IkeniTextBody.White" parent="IkeniTextBody">
        <item name="android:textColor">@color/ikeniWhite</item>
    </style>

    <style name="IkeniTextSubHeader">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/IkeniTextSize.SubHeader</item>
    </style>

    <style name="IkeniTextSubHeader.White" parent="IkeniTextSubHeader">
        <item name="android:textColor">@color/ikeniWhite</item>
    </style>

    <style name="IkeniTextTitle">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/IkeniTextSize.Title</item>
    </style>

    <style name="IkeniTextTitle.White" parent="IkeniTextTitle">
        <item name="android:textColor">@color/ikeniWhite</item>
    </style>

    <style name="IkeniTextHeadline">
        <item name="android:lineSpacingExtra">@dimen/space_8</item>
        <item name="android:textAppearance">@style/IkeniTextSize.Headline</item>
    </style>

    <style name="IkeniTextHeadline.White" parent="IkeniTextHeadline">
        <item name="android:textColor">@color/ikeniWhite</item>
    </style>

    <!--Dialog part -->
    <style name="IkeniDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="IkeniDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/IkeniDialogAnimation</item>
    </style>

</resources>
